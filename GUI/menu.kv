<PacManScreenManager>:
    MenuScreen:
        id: menu_screen
    GameModeScreen:
    ExitScreen:
    MapChoiceScreen



<MenuScreen>:
    name : '_menu_screen_'
    GridLayout:
        cols : 1
        rows : 4
        Button:
            text: 'GameMode'
            background_color: (0, 99, 71, 0.5)
            on_press: root.manager.current = '_gamemode_screen_'
        Button:
            text: 'ScoreBoard'
            background_color: (0, 99, 71, 0.5)
            on_press: root.scoreboard()
        Button:
            text: 'Settings'
            background_color: (0, 99, 71, 0.5)
            on_press: root.settings()
        Button:
            text: 'Exit'
            background_color: (0, 99, 71, 0.5)
            on_press: root.manager.current = '_exit_screen_'

<GameModeScreen>:
    name: "_gamemode_screen_"
    GridLayout:
        cols : 1
        rows : 2
        Label:
            text: "Choisissez le mode de jeu :"
        GridLayout:
            cols : 3
            rows : 1
            Button:
                text: 'Solo'
                background_color: (0, 99, 71, 0.5)
                on_press: root.manager.current = "_map_choice_screen_"
            Button:
                text: 'Duo'
                background_color: (0, 99, 71, 0.5)
                on_press: root.manager.current = "_map_choice_screen_"
            Button:
                text: 'Retour'
                background_color: (0, 99, 71, 0.5)
                on_press: root.manager.current = '_menu_screen_'

<MapChoiceScreen>:
    name: "_map_choice_screen_"
    GridLayout:
        rows: 2
        cols: 1
        Label:
            text: "Choisissez une map"
        GridLayout:
            cols: 2
            rows: 1
            Button:
                text: 'Map 1'
                background_color: (0, 99, 71, 0.5)
                on_press: pass
            Button:
                text: 'Map 2'
                background_color: (0, 99, 71, 0.5)
                on_press: pass

<ExitScreen>:
    name: "_exit_screen_"
    GridLayout:
        rows : 2
        cols : 1
        Label:
            text: "Etes vous cerrtain de vouloir quitter ?"
        GridLayout:
            cols: 3
            rows: 1
            Button:
                text: 'Oui'
                background_color: (0, 99, 71, 0.5)
                on_press: root.manager.current = exit()
            Label:
                text: ''
            Button:
                text: 'Non'
                background_color: (0, 99, 71, 0.5)
                on_press: root.manager.current = '_menu_screen_'




